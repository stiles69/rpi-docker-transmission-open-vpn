# ====== Added by Brett Salemink for Gentoo =====
# For unmasking emerge
alias a='--autoumask-write'

# Services Specific for Gentoo
alias nfs-start="sudo /etc/init.d/nfs start"
alias nfs-stop="sudo rc-service rpcbind stop"

# Specific for Gentoo
alias sshd-stop="sudo service sshd stop"
alias sshd-start="sudo service sshd start"
alias sshd-status="sudo service sshd status"
alias sshd-restart="sudo service sshd restart"
alias sshd-disable="sudo service sshd disable"
alias sshd-enable="sudo service sshd enable"
