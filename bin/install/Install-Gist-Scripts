#!/bin/bash
# First argument: the ID of the Github Gist to clone from
GIST_ID=${1}
# Clone the gist in our bin directory
cd ~/bin
git clone git@gist.github.com:/${GIST_ID}.git
# symlink all scripts for global execution
for entry in "$GIST_ID"/*
do
SCRIPT_NAME=$entry
ln $SCRIPT_NAME
chmod +x $SCRIPT_NAME
done
